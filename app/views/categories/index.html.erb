<p id="notice"><%= notice %></p>

<h1  class="c">Categories</h1>

<table class="hoja">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= button_to "Destroy", category_path(category),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %><td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>
