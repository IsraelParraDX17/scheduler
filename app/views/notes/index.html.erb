<p id="notice"><%= notice %></p>

<h1 align="center">Notes</h1>

<table class="simon">
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.body %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= button_to "Destroy", note_path(note),
                          method: :delete,
                          data: { confirm: "Are you sure?" } %><td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
